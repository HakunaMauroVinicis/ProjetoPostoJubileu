    <main>
        <div class="container">
            <h2>Cadastro de Produto</h2>
            <form id="cadastroProdutoForm" action="/savarProduto" method="POST">
                <label for="nomeProd">Nome do Produto:</label>
                <input type="text" id="nomeProd" name="nomeProd" maxlength="30" placeholder="Nome:" required>
                
                <label for="descricao">Descrição:</label>
                <input type="text" id="descricao" name="descricao" maxlength="255" placeholder="Descrição">

                <label for="quantidade">Quantidade:</label>
                <input type="number" id="quantidade" name="quantidade" placeholder="Quantidade"/>

                <label for="preco">Preço:</label>
                <input type="text" id="preco" name="preco" maxlength="12,2" value="" placeholder="R$:"/>

                <input type="submit" value="Cadastrar">
            </form>
        </div>
    </main>

